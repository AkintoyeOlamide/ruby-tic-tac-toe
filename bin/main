#!/usr/bin/env ruby

class Players
  @@token_array = ['x', 'X', 'o', 'O']
  @@token = nil
  @@name = Hash.new
  
  def initialize(name, token)
    player_position = @@name.length
    @@name[player_position] = name
    
    if validate_token?(token)
      @@token = token.capitalize
      p "#{token}, Nice choice!"
    else   
      p "Invalid token, please choose X or O"
    end
  end

  def validate_token?(token)
    @@token_array.any?(token)
  end  

  def display
    puts "#{@@name} and #{@@token} "
  end  

end


p 'Hey player1, whats your name?'
player1_name = gets.chomp
p "hello #{player1_name}, Please select a token (x / o)"
# get the player1 token (x / o)
player1_token = gets.chomp

player1 = Players.new(player1_name, player1_token)

