#!/usr/bin/env ruby

class Players
  @@token_array = ['x', 'X', 'o', 'O']
  @@token = nil
  @@name = Hash.new
  
  def initialize
    player_name
    player_position = @@name.length
    validate_token?
  end
  def player_name
    p "Hey player, whats your name?"
    @@name = gets.chomp
    p "hello #{@@name}, Please select a token (x / o)"    
  end
  def validate_token?
    token = gets.chomp
    correct = false
    unless correct == true
    if @@token_array.any?(token)
        @@token = token.capitalize
        p "#{@@token}, Nice choice!"
        correct = true
    else   
        p "Invalid token, please choose X or O"
        validate_token?
    end
    end
  end  

  def display
    puts "#{@@name} and #{@@token} "
  end  

end
# get player1 name and token
player1 = Players.new
# get player2 name and token
player2 = Players.new


p player1 , player2


