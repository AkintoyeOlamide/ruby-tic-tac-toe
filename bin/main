$board_display = [[1, 2, 3], [4, 5, 6], [7, 8, 9]]
def change_board(token,player)
  # board_display.each { |n| p n }
  puts "It's #{player} turn."
  puts "Please select a number from the board:"
  select_number = gets.chomp.to_i - 1
  board_flatten = $board_display.flatten
  board_flatten[select_number] = token
  $board_display = board_flatten.each_slice(3).to_a
  $board_display.each { |n| p n }
end


def game
  5.times do
  def player1
    change_board("X","player1")
  end
  def player2
    change_board("O","player2")
  end
  player1
  player2
end
end
game